```astro
---
import { quizLevels } from '../../data/quiz-questions';

interface Props {
  level: keyof typeof quizLevels;
}

const { level } = Astro.props;
const levelData = quizLevels[level];
---

<div class="fixed inset-0 bg-gray-900/90 backdrop-blur-md flex items-center justify-center z-50">
  <div class="max-w-md w-full mx-4">
    <div class="relative">
      <div class="absolute -inset-4 bg-gradient-to-r from-cosmic-600/30 to-purple-600/30 rounded-xl blur-3xl"></div>
      
      <div class="relative bg-gray-900 rounded-xl p-8 text-center">
        <div class="text-6xl mb-6 animate-bounce">{levelData.icon}</div>
        
        <h2 class="text-2xl font-bold text-white mb-2">New Level Unlocked!</h2>
        <h3 class="text-xl text-cosmic-400 mb-4">{levelData.name}</h3>
        
        <p class="text-gray-400 mb-6">{levelData.description}</p>
        
        <div class="space-y-4 mb-8">
          <div class="flex items-center justify-between px-4 py-2 bg-gray-800 rounded-lg">
            <span class="text-gray-400">Questions</span>
            <span class="text-white font-bold">{levelData.questionCount}</span>
          </div>
          <div class="flex items-center justify-between px-4 py-2 bg-gray-800 rounded-lg">
            <span class="text-gray-400">Time Limit</span>
            <span class="text-white font-bold">{levelData.timeLimit}s</span>
          </div>
          <div class="flex items-center justify-between px-4 py-2 bg-gray-800 rounded-lg">
            <span class="text-gray-400">Point Multiplier</span>
            <span class="text-white font-bold">x{levelData.pointMultiplier}</span>
          </div>
        </div>

        <button 
          class="px-8 py-3 bg-cosmic-600 text-white rounded-lg hover:bg-cosmic-700 transition-colors"
          onclick="this.closest('.fixed').remove()"
        >
          Start Playing
        </button>
      </div>
    </div>
  </div>
</div>
```